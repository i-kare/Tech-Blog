<!DOCTYPE html>
<html lang="en">
<script src="../Public/js/create-new-post.js"></script>

<head>
    <meta charset = "UTF-8">
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Dashboard | Tech Blog</title>
    <link href="https://fonts.googleapis.com/css?family=IBM+Plex+Sans:400,400i,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/jass.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class ="flex-column min-100-vh" id="navigationLinks">  
  
  <header class = "changingTitle"> 
    <h1 class = "regular-title">
      Your Dashboard
    </h1>
  </header>

  <main class="col-auto">
        <!-- Render the sub layout -->
 <section class="body"> {{{body}}} </section>
 <section class="create-new-post-card" id="dashboardPage" style="display: none;"> 
        <section class = "create-new-post-card-body" id="bodyofdashboardPage">
            <div class="row">
              <div class="column-1">
                    <div class="row">
                        <div class="text-center">
                         <h2 class="createnewpostTitle" id="createnewpostTitle">Create New Post</h2>
                            <form class="card-body" id="post-form">
                                <input type="hidden" name="post-id" value="{{post.id}}"/>
                                <div class="form-group"> 
                                    <label for="title">Title</label>
                                    <input class="form-input" type="text" id="title-input" />
                                </div>
                                <div class="form-group"> 
                                    <label for="content">Content</label>
                                    <textarea class="form-textarea form-input" type="text" id="content-input" data-number="8"/></textarea>
                                </div>
                                    <button class="btn btn-primary btn-lg" id="createButton" type="submit">Create</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
 </section>
 
  </main> 

<footer>
    <button class="btn btn-primary btn-lg" id="addNewPostButton">+ New Post!</button> 
</footer>

</body>
</html>
<script src="../Public/js/logout.js"></script>
<script src="../Public/js/post.js"></script>



